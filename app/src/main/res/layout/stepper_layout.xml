<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stepperImageOneId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkbox_blank_circle" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorYellow" />

        <ImageView
            android:id="@+id/stepperImageTwoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_outline" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorYellow" />

        <ImageView
            android:id="@+id/stepperImageThreeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_outline" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorYellow" />

        <ImageView
            android:id="@+id/stepperImageFourId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_outline" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStepperOneId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtStepperTwoId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtStepperThreeId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="3" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtStepperFourId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="4" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textStepId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="24dp"
            android:paddingBottom="5dp"
            android:visibility="invisible"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imgInformationId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imgInformationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/information_button"
            app:layout_constraintBottom_toBottomOf="@+id/textStepId"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/textStepId"
            app:layout_constraintTop_toTopOf="@+id/textStepId" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>